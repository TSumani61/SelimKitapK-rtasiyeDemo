rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Herkes okuyabilir (Ürünleri görmek için)
    match /{document=**} {
      allow read: if true;
    }

    // Sadece giriş yapmış (Email/Şifre ile) kullanıcılar yazabilir/silebilir
    match /{document=**} {
      allow write: if request.auth != null;
    }
  }
}
